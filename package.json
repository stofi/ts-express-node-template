{
    "dependencies": {
        "body-parser": "^1.20.0",
        "brain": "^1.0.0",
        "cors": "^2.8.5",
        "dotenv": "^16.0.1",
        "express": "^4.17.1",
        "logger": "^0.0.1",
        "openai": "^2.0.5",
        "socket.io": "^4.4.1",
        "uuid": "^8.3.2"
    },
    "scripts": {
        "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
        "start": "npm run build && node build/index.js",
        "start:dev": "nodemon",
        "build": "rimraf ./build && tsc",
        "prepare": "husky install"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "eslint --fix"
        ]
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.2",
        "@types/express": "^4.17.13",
        "@types/logger": "^0.0.1",
        "@types/node": "^16.4.1",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^4.28.4",
        "@typescript-eslint/parser": "^4.28.4",
        "eslint-config-prettier": "^8.3.0",
        "husky": "^8.0.1",
        "lint-staged": "^12.4.3",
        "nodemon": "^2.0.12",
        "prettier": "^2.3.2",
        "rimraf": "^3.0.2",
        "ts-node": "^10.1.0",
        "typescript": "^4.3.5"
    }
}
